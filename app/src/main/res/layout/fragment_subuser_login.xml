<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="6">

            <ImageView
                android:layout_width="@dimen/logo_width"
                android:layout_height="@dimen/logo_height"
                android:layout_gravity="center"
                android:src="@drawable/logo1"/>

            <LinearLayout
                android:layout_width="@dimen/logo_width"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_bg2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pin_edit_text"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:hint="Your pin"
                    android:gravity="center|start"
                    android:layout_marginStart="8dp"
                    android:textSize="22dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_lock"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/sub_user_keypad_width"
                    android:layout_height="@dimen/sub_user_key_height"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_1" />

                    <ImageView
                        android:id="@+id/btn_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_2" />

                    <ImageView
                        android:id="@+id/btn_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_3" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/sub_user_keypad_width"
                    android:layout_height="@dimen/sub_user_key_height"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_4" />

                    <ImageView
                        android:id="@+id/btn_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_5" />

                    <ImageView
                        android:id="@+id/btn_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_6" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/sub_user_keypad_width"
                    android:layout_height="@dimen/sub_user_key_height"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_7" />

                    <ImageView
                        android:id="@+id/btn_8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_8" />

                    <ImageView
                        android:id="@+id/btn_9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_9" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/sub_user_keypad_width"
                    android:layout_height="@dimen/sub_user_key_height"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/clear"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_10" />

                    <ImageView
                        android:id="@+id/btn_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_0" />

                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_next" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="or use"
                android:textColor="@color/app_primary"
                android:layout_marginTop="22dp"
                android:textSize="22sp" />

            <Button
                android:id="@+id/admin_login_button"
                android:layout_width="@dimen/logo_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/login_btn"
                android:text="Admin's Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        android:visibility="gone" />


    <TextView
        android:id="@+id/pin_edit_text2"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_bg2"
        android:drawableEnd="@drawable/ic_lock"
        android:gravity="start|center"
        android:hint="Your pin"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:textSize="30dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_above="@id/or"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_1" />

            <ImageView
                android:id="@+id/btn_21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_2" />

            <ImageView
                android:id="@+id/btn_31"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_3" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_41"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_4" />

            <ImageView
                android:id="@+id/btn_51"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_5" />

            <ImageView
                android:id="@+id/btn_61"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_6" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_71"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_7" />

            <ImageView
                android:id="@+id/btn_81"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_8" />

            <ImageView
                android:id="@+id/btn_91"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_9" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clear1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_10" />

            <ImageView
                android:id="@+id/btn_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_0" />

            <ImageView
                android:id="@+id/next1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/icon_next" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/admin_login_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="start|center"
        android:hint="or use"
        android:textSize="24sp"
        android:visibility="gone" />


</RelativeLayout>