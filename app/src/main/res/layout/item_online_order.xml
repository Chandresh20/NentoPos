<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20sp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <TableLayout
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:layout_marginEnd="@dimen/online_item_button_margin"
            android:layout_marginStart="@dimen/online_item_button_margin">
            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Id"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />
            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22-Apr-2021 20:02"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />
            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Table"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/table_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />
            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Miller"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />

            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Online"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />

            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/pickup_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22-Apr-2021 20:02"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="@dimen/order_text" />
            </LinearLayout>

        </TableRow>

        <TableRow android:layout_marginEnd="@dimen/online_item_button_margin"
            android:layout_marginStart="@dimen/online_item_button_margin" >
            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />

                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$456.22"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />
            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Payment Status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />

                <TextView
                    android:id="@+id/payment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unpaid"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />

            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Server"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/server_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />

            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Account No."
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />

            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Future Order"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/future_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22-Apr-2021 20:02"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />

            </LinearLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Assigned Driver"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text" />


                <TextView
                    android:id="@+id/assigned_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mark"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/accept_order"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="@dimen/online_item_button_margin"
                android:background="@drawable/order_item_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="Accept \n Order "
                android:textColor="@color/green"
                android:textSize="@dimen/order_text" />

            <TextView
                android:id="@+id/complete_order"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="@dimen/online_item_button_margin"
                android:background="@drawable/order_item_bg"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="gone"
                android:text="Complete\n Order"
                android:textColor="@color/green"
                android:textSize="@dimen/order_text" />

            <TextView
                android:id="@+id/cancel_order"
                android:layout_weight="1"
                android:layout_margin="@dimen/online_item_button_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/red_bg2"
                android:gravity="center"
                android:padding="10dp"
                android:text="Cancel \n Order"
                android:textColor="@color/red"
                android:textSize="@dimen/order_text" />
            <TextView
                android:id="@+id/onlineOrderInvoice"
                android:layout_weight="1"
                android:layout_margin="@dimen/online_item_button_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="POS\nInvoice"
                android:textColor="@color/app_primary"
                android:textSize="@dimen/order_text" />
            <TextView
                android:id="@+id/view_details"
                android:layout_weight="1"
                android:layout_margin="@dimen/online_item_button_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="View\nInvoice"
                android:textColor="@color/app_primary"
                android:textSize="@dimen/order_text" />
            <TextView
                android:id="@+id/assign_driver"
                android:layout_weight="1"
                android:layout_margin="@dimen/online_item_button_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="Assign \n Driver"
                android:textColor="@color/button"
                android:textSize="@dimen/order_text" />
        </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>